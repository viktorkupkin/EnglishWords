<Window x:Class="EnglishWords_v1.InputUserName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishWords_v1"
        mc:Ignorable="d"
        Title="Ваше имя" Width="250" Height="150" >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="5" />
            <RowDefinition Height="20" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock>Введите имя:</TextBlock>
        <TextBox x:Name="nameBox" Grid.Row="2" MinWidth="210">Имя</TextBox>

        <WrapPanel Grid.Row="4" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="OkButton" IsDefault="True" MinWidth="60" Margin="0,0,10,0" Click="OkButton_Click">OK</Button>
            <Button x:Name="Cancel" IsCancel="True" MinWidth="60">Отмена</Button>
        </WrapPanel>

    </Grid>
</Window>
